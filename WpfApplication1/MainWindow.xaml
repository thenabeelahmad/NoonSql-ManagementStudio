<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to Server" 
        Height="340" Width="420" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        >
    <Grid>
        <Label Content="NoonSQL" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="16" Margin="161,15,166.6,249.4" Width="86"  />

        <Line
    X1="0" Y1="60"
    X2="405" Y2="60"
    StrokeThickness="3"
    HorizontalAlignment="Center">
            <Line.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="DarkGray" Offset="0.0"/>
                    <!-- Light on the left -->
                    <GradientStop Color="Orange" Offset="0.5"/>
                    <!-- Dark in the middle -->
                    <GradientStop Color="DarkGray"  Offset="1.0"/>
                    <!-- Light on the right -->
                </LinearGradientBrush>
            </Line.Stroke>
        </Line>


        <Label Content="Server Name:" HorizontalAlignment="Left" Margin="20,77,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="comboBoxServer" HorizontalAlignment="Left" Margin="120,82,0,0" VerticalAlignment="Top" Width="250" Height="20"/>

        <Label Content="Authentication:" HorizontalAlignment="Left" Margin="20,117,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxAuth" HorizontalAlignment="Left" Margin="120,117,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="comboBoxAuth_SelectionChanged">
            <ComboBoxItem Content="Windows Authentication" IsSelected="True"/>
            <ComboBoxItem Content="SQL Server Authentication"/>
        </ComboBox>

        <GroupBox Header="Login Credentials" HorizontalAlignment="Left" Margin="20,151,0,0" BorderBrush="DarkGray" VerticalAlignment="Top" Width="350" Height="100">
            <Grid>
                <Label Content="Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textBoxUsername" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="200" IsEnabled="False"/>

                <Label Content="Password:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
                <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="200" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <Button x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Right" Margin="0,268,18.6,0" VerticalAlignment="Top" Width="80" Click="btnConnect_Click"/>
    </Grid>
</Window>
